<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Light_Blue">

    <LinearLayout
        android:id="@+id/Modes_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >


        <com.google.android.material.button.MaterialButton
            android:id="@+id/Menu_BTN_TwoButtonsMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Buttuns Mode"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Menu_BTN_SensorsMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensors Mode"
            android:layout_gravity="center"
            android:layout_centerInParent="true"

            />

    </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Menu_BTN_Records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Records board"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/Modes_LL"
            android:layout_marginTop="50dp"

            />



</RelativeLayout>